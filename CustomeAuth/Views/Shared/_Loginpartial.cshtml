@if(Context.User.Identity.Name != null)
{
    <form asp-controller="AccountController1" asp-action="Logout" method="post" id="LogoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                Hello @Context.User.Identity.Name!

            </li> 
              <li>
                  <button type="submit" class="btn btn-link navbar-btn navbar-link">Log Out</button>
              </li>
        </ul>
        </form>


}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-black" asp-controller="AccountController1" asp-action="Registeration"> Register </a> </li>
        <li><a class="nav-link text-black" asp-controller="AccountController1" asp-action="Login"> Log in </a>  </li>
    </ul>



}